{
  "name": "breeze_next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "mqtt:start": "docker-compose up -d",
    "mqtt:stop": "docker-compose down",
    "mqtt:logs": "docker-compose logs -f mosquitto",
